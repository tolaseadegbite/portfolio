<%= provide(:title, "Log in") %>

<div class="container py-5 text-center" style="max-width: 540px">
  <h2 class="mb-3">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3">
      <%= f.email_field :email, placeholder: "Enter your email...", autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field mb-3">
      <%= f.password_field :password, autocomplete: "current-password...", placeholder: "Enter your password...", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mb-3">
      <%= f.submit "Log in", class: "btn btn-dark" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
