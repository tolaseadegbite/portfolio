<% if current_user %>
    <% like = current_user.likes.find_by(likeable: likeable) %>
<% end %>

<% if like.nil? %>  
    <%= button_to(likes_path, class:"btn btn-light border fs-4",  params:{ like: {likeable_id: likeable.id,  likeable_type: likeable.class.to_s}}) do %>
        <i class="bi bi-suit-heart"></i>
        <%= likeable.likes_count %>
    <% end %>
<% else %>  
    <%= button_to(like_path(like), class:"btn btn-light border fs-4", method: :delete) do %>
        <i class="bi bi-suit-heart-fill text-danger"></i>
        <%= likeable.likes_count %>
    <% end %>
<% end %>