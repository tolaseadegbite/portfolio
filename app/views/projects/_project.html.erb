<div class="col-md-4 pb-3">
    <div class="project-card border border-dark rounded pb-3 h-100">
        <div class="project-img mb-3">
            <% if project.image.attached? %>
                <%= link_to project do %>
                    <%= image_tag project.image, class: "img-fluid" %>
                <% end %>
            <% else %>
                <%= link_to project do %>
                    <%= image_tag 'default-webpage.jpg', class: "img-fluid" %>
                <% end %>
            <% end %>
        </div>
        <div class="px-2">
            <h5 class="project-title"><%= link_to project.title, project, class: "text-dark text-decoration-none" %></h5>
            <div class="project-tags">
                <% project.tags.each do |tag| %>
                    <%= link_to tag.name, tag, class: "btn btn-light btn-sm text-sm border" %>
                <% end %>
            </div>
            <p class="project-copy text-sm text-justify"><%= project.description.to_plain_text.truncate(100) %></p>
            <div class="mt-3">
                <% if project.preview_link.present? %>
                    <%= link_to project.preview_link, class: "btn btn-light border-dark me-2 btn-sm" do %>
                        <i class="bi bi-box-arrow-up-right"></i>
                        Preview
                    <% end %>
                <% end %>
                <%= link_to project.github_link, class: "btn btn-dark me-2 btn-sm" do %>
                    <i class="bi bi-github"></i>
                    Github
                <% end %>
            </div>
        </div>
    </div>
</div>